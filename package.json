{
  "name": "typescript-library-boilerplate",
  "version": "0.2.0",
  "description": "typescript boilerplate",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jkanchelov/typescript-library-boilerplate.git"
  },
  "keywords": [
    "typescript",
    "boilerplate"
  ],
  "author": "jkanchelov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jkanchelov/typescript-library-boilerplate/issues"
  },
  "homepage": "https://github.com/jkanchelov/typescript-library-boilerplate#readme",
  "scripts": {
    "prepublish": "npm run build",
    "pretty-check": "npx prettier -c ./src/**/*.ts",
    "lint-check": "npx eslint ./src/**/*.ts",
    "code-style-check": "npm run lint-check && npm run pretty-check",
    "build": "tsc",
    "build:watch": "tsc -w",
    "watch": "npx nodemon dist/index.js",
    "start:watch": "npx nodemon dist/index.js",
    "debug": "npx npm-run-all -p build:watch start:watch"
  },
  "devDependencies": {
    "@types/node": "^12.12.16",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.11.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "husky": "^3.1.0",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "typescript": "^3.7.3"
  }
}
