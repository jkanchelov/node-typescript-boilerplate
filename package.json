{
    "name": "typescript-library-boilerplate",
    "version": "0.2.0",
    "description": "typescript boilerplate",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jkanchelov/typescript-library-boilerplate.git"
    },
    "keywords": [
        "typescript",
        "boilerplate"
    ],
    "author": "jkanchelov",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jkanchelov/typescript-library-boilerplate/issues"
    },
    "homepage": "https://github.com/jkanchelov/typescript-library-boilerplate#readme",
    "scripts": {
        "prepublish": "npm run build",
        "build": "tsc",
        "build:watch": "tsc -w",
        "pretty-check": "npx prettier -c ./src/**/*.ts",
        "watch": "npx nodemon dist/index.js",
        "start": "node dist/index.js",
        "debug": "npx npm-run-all -p build:watch watch"
    },
    "devDependencies": {
        "@types/node": "^12.12.14",
        "husky": "^3.0.5",
        "nodemon": "^2.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.17.1",
        "typescript": "^3.5.3"
    }
}
