{
    "name": "typescript-library-boilerplate",
    "version": "0.1.0",
    "description": "typescript babel boilerplate",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jkanchelov/typescript-library-boilerplate.git"
    },
    "keywords": [
        "typescript",
        "babel",
        "boilerplate"
    ],
    "author": "jkanchelov",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jkanchelov/typescript-library-boilerplate/issues"
    },
    "homepage": "https://github.com/jkanchelov/typescript-library-boilerplate#readme",
    "scripts": {
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch",
        "build": "npm run build:types && npm run build:js",
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
        "build:watch": "npm run build && babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline --watch"
    },
    "devDependencies": {
        "@babel/cli": "^7.0.0",
        "@babel/core": "^7.0.0",
        "@babel/plugin-proposal-class-properties": "^7.0.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "@babel/preset-typescript": "^7.0.0",
        "typescript": "^3.0.3"
    }
}
